<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-light navbar-expand-sm">
      <%= link_to "Articles", root_path, class: "navbar-brand" %>
      <div class="container col-md-8">
        <ul class="navbar-nav ml-auto">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "Log out", destroy_session_path, method: :delete, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled"><%= current_user.email %></a>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign up", users_signup_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div id="flash_messages">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{flash_key(key)}") %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
